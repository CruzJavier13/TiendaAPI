@model IEnumerable<Ventas.Models.VentasDTOReportes>

@{
    ViewBag.Title = "Index";
}

<h1>Generar Reporte</h1>

<form asp-controller="ReporteVenta" asp-action="Index" method="post" class="form-group form-inline">
    <div class="form-group">
        <label asp-for="inicio">Desde</label>
        <input asp-for="inicio" name="inicio" type="date" class="form-control" value="2023-03-06"/>
    </div>
    <div class="form-group">
        <label asp-for="fin">Hasta</label>
        <input asp-for="fin" name="fin" type="date" class="form-control" value="2023-04-20"/>
    </div>
    <div class="form-group">
        <label asp-for="codigoventa">Código de la venta</label>
        <input asp-for="codigoventa" name="codigoventa" type="text" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Buscar</button>
</form>
